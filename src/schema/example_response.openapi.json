{
	"openapi": "3.1.0",
	"info": {
		"title": "SearchRetrieveResponse",
		"version": "1.0.0"
	},
	"paths": {
		"/api/sru": {
			"get": {
				"operationId": "searchRetrieve",
				"summary": "SRU検索を実行する",
				"parameters": [
					{
						"name": "operation",
						"in": "query",
						"required": true,
						"description": "searchRetrieve 固定",
						"schema": {
							"type": "string",
							"const": "searchRetrieve"
						}
					},
					{
						"name": "maximumRecords",
						"in": "query",
						"required": true,
						"description": "取得件数の固定値",
						"schema": {
							"type": "number",
							"const": 10
						}
					},
					{
						"name": "query",
						"in": "query",
						"required": true,
						"description": "title もしくは isbn の単一条件",
						"schema": {
							"type": "string",
							"minLength": 1,
							"pattern": "^(title=\\\".+\\\"|isbn=\\\"(\\\\d{10}|\\\\d{13})\\\")$"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/xml": {
								"schema": {
									"$ref": "#/components/schemas/SearchRetrieveResponse"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"SearchRetrieveResponse": {
				"type": "object",
				"properties": {
					"searchRetrieveResponse": {
						"$ref": "#/components/schemas/SearchRetrieveResponseClass"
					}
				},
				"required": ["searchRetrieveResponse"],
				"title": "SearchRetrieveResponse"
			},
			"SearchRetrieveResponseClass": {
				"type": "object",
				"properties": {
					"version": {
						"type": "number"
					},
					"numberOfRecords": {
						"type": "number"
					},
					"nextRecordPosition": {
						"type": "number"
					},
					"records": {
						"$ref": "#/components/schemas/Records"
					}
				},
				"required": [
					"version",
					"numberOfRecords",
					"nextRecordPosition",
					"records"
				]
			},
			"Records": {
				"type": "object",
				"properties": {
					"record": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/Record"
						}
					}
				},
				"required": ["record"]
			},
			"Record": {
				"type": "object",
				"properties": {
					"recordSchema": {
						"type": "string"
					},
					"recordPacking": {
						"type": "string"
					},
					"recordData": {
						"$ref": "#/components/schemas/RecordData"
					},
					"recordPosition": {
						"type": "number"
					}
				},
				"required": [
					"recordSchema",
					"recordPacking",
					"recordData",
					"recordPosition"
				]
			},
			"RecordData": {
				"type": "object",
				"properties": {
					"dc": {
						"$ref": "#/components/schemas/Dc"
					}
				},
				"required": ["dc"]
			},
			"Dc": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string"
					},
					"subject": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"language": {
						"type": "string"
					},
					"attr_schemaLocation": {
						"type": "string"
					},
					"creator": {
						"type": "string"
					}
				},
				"required": ["title", "language", "attr_schemaLocation"]
			}
		}
	}
}
